
@keyframes rotate {
  from {
    transform: rotate(0deg)
  }

  to {
    transform: rotate(360deg)
  }
}

.page
  display inline-block
  position relative
  padding 10px
  padding-bottom 10px
  background-color #f2f2f2
  margin-right 20px
  margin-bottom 20px
  border-radius 4px
  vertical-align top
  font-size 14px

  &.drop-hover
    background-color #ccc

  .spinner
    display block
    position absolute
    top 0px
    right 0px
    bottom 0px
    left 0px
    background-color rgb(0,0,0)
    background-color rgba(0,0,0,0.3)
    cursor pointer

    .glyphicon
      top 100px
      left 70px
      font-size 60px
      color #fff

      &.glyphicon-refresh.m-refreshing
        -webkit-animation rotate 1s infinite
        -webkit-animation-timing-function linear

  .spinner-label
    display block
    color #fff
    text-align center
    font-size 1.3em

  span.name
    display block
    width 170px
    line-height 2em
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

  .page-image
    display block
    background-color #fff

    &.disable
      opacity 0.35

    img
      width 176px

  span.page-number
    display block
    text-align center
    font-size 0.8em

  .controls
    display none
    position absolute
    top 0px
    right 0px
    color #fff
    text-align center
    z-index 100

    // a.delete:hover
    //   text-decoration none
    //   background-color red

  &:hover
    .controls
      display block

.pages-list
  &.m-smallTiles
    li.page
      font-size 10px
      margin-bottom 10px
      margin-right 10px
      padding-bottom 5px

      .page-image
        img
          width 100px
      span.name
        width 100px

      .spinner
        .glyphicon
          top 75px
          left 45px
          font-size 40px
          &.glyphicon-refresh
            font-size 30px


addpage
  input
    width 95px

.catalogPreview
  position fixed
  top 0px
  bottom 0px
  left 0px
  right 0px
  background-color rgba(0,0,0,0.75)
  user-select none
  z-index 1200

.catalogPreviewImage
  display block
  margin 2.5% auto
  height 95%

.loader
  position fixed
  top 0px
  bottom 0px
  left 0px
  right 0px
  background-color rgba(255,255,255,0.75)
  user-select none
  z-index 1200

.loader-image {
